<!-- Validation failure messages -->
<% if @photo.errors.any? %>
  <% @photo.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit photo #<%= @photo.id %>
</h1>

<hr>

<form action="/update_photo/<%= @photo.id %>" method="post">
  <!-- Label and input for skintone_id -->
  <div class="form-group">
     <div class="form-group">
  
    <input type="hidden" id="skintone_id" name="skintone_id" value="<%= current_user.skintone_id %>">
    
  </div>
  <!-- Label and input for user_id -->
  <div class="form-group">
    <input type="hidden" id="user_id" name="user_id" value="<%= current_user.id %>">
   
  </div>

  <!-- Label and input for image -->
  <div class="form-group">
    <label for="image">
      Image
    </label>

    <input type="text" id="image" name="image" class="form-control" value="<%= @photo.image %>">
  </div>

  <!-- Label and input for product_id -->
  <div class="form-group">
    <label for="product_id">
      Product
    </label>

    <input type="text" id="product_id" name="product_id" class="form-control" value="<%= @photo.product_id %>">
  </div>

  <button class="btn btn-block btn-primary">
    Update Photo
  </button>
</form>

<hr>

<a href="/photos">
  Go back
</a>
